<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/nav_graph"
    app:startDestination="@id/selectMosaicEditFragment">

    <fragment
        android:id="@+id/selectMosaicEditFragment"
        android:name="team.jsv.icec.ui.main.SelectMosaicEditFragment"
        android:label="SelectMosaicEditFragment" >
        <action
            android:id="@+id/action_selectMosaicEditFragment_to_faceSelectFragment"
            app:enterAnim="@drawable/slide_up"
            app:popExitAnim="@drawable/slide_down"
            app:destination="@id/faceSelectFragment" />
        <action
            android:id="@+id/action_selectMosaicEditFragment_to_photoEditFragment"
            app:destination="@id/photoEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/faceSelectFragment"
        android:name="team.jsv.icec.ui.main.mosaic.detect.DetectFaceFragment"
        android:label="FaceSelectFragment" >
        <action
            android:id="@+id/action_faceSelectFragment_to_faceMosaicFragment"
            app:enterAnim="@drawable/slide_from_right"
            app:popEnterAnim="@drawable/slide_from_left"
            app:popExitAnim="@drawable/slide_to_right"
            app:exitAnim="@drawable/slide_to_left"
            app:destination="@id/faceMosaicFragment" />
    </fragment>

    <fragment
        android:id="@+id/photoEditFragment"
        android:name="team.jsv.icec.ui.main.edit.PhotoEditFragment"
        android:label="PhotoEditFragment" />

    <fragment
        android:id="@+id/faceMosaicFragment"
        android:name="team.jsv.icec.ui.main.mosaic.mosaicFace.MosaicFaceFragment"
        android:label="PhotoEditFragment" />

</navigation>