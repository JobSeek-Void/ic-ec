<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_back_32_32"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textview_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textview_title"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:includeFontPadding="false"
            android:text="@string/mosaic_text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_next"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:text="@string/next_text"
            android:textColor="@color/SubColor"
            android:textSize="12sp"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@id/textview_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_title"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_share"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:outlineProvider="none"
            android:padding="0dp"
            android:text="@string/share_text"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone"
            app:icon="@drawable/ic_share_18_18"
            app:iconGravity="textTop"
            app:iconPadding="2dp"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/button_back"
            app:layout_constraintEnd_toStartOf="@+id/button_download"
            app:layout_constraintTop_toTopOf="@+id/button_back"
            tools:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_download"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:outlineProvider="none"
            android:padding="0dp"
            android:text="@string/download_text"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone"
            app:icon="@drawable/ic_download_18_18"
            app:iconGravity="textTop"
            app:iconPadding="2dp"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_back"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>